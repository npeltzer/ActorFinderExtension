{
  "manifest_version": 2,
  "name": "Actor Seach Extension",
  "version": "0.1",
  "description": "Select the name of an actor, actress, director, or most other people with movie credits, right click and search.",
  "browser_action": {
   	"default_icon":"img/icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [ "contextMenus","storage","notifications","tabs" ],
  "background": {
    "scripts": [ "jquery-2.2.0.min.js", "tmdb.js", "context.js" ],
    "persistent": false
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"

  }
}